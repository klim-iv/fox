<!DOCTYPE html>
<html>
	<head>
		<link href="/css/bootstrap.min.css" rel="stylesheet" media="screen" />
		<script src="/js/spin.min.js" type="text/javascript"></script>
		<script>
			var spinner;
			function stop_spin() {
				if (spinner)
					spinner.stop();
			}
			function do_spin(id) {
			  var opts = {
					  lines: 15,
					  length: 11,
					  width: 2,
					  radius: 4,
					  corners: 0.4,
					  rotate: 75,
					  color: '#000',
					  speed: 0.8,
					  trail: 15,
					  shadow: false,
					  hwaccel: false,
					  className: 'spinner',
					  zIndex: 2e9,
					  top: '0px',
					  left: '0px'
					};
				var target = document.getElementById(id);
				opts["length"] = target.clientHeight / 2 - 1.5 * opts["radius"] ;
				stop_spin();
				spinner = new Spinner(opts).spin(target);
			}
			document.onstop = stop_spin;
		</script>
	</head>
	<body>
		<div id="main" class="container-fluid">
			<div class="row-fluid">
				<div class="span2"></div>
				<div class="span10">
					<h2><%= cur_dir %></h2>
					<table class="table table-striped table-bordered table-hover">
						<% files.each { |f| %>
						<tr>
							<td>
								<div class="span9">
									<% if f.has_key?("icon") %>
									<i class="<%= f["icon"] %>"></i>
									<% end %>
									<% if f["is_dir"] %> <a href="/list<%= f["name"] %>"> <%= File.basename(f["name"]) %> </a>
									<% elsif f.has_key?("url") %> <a href="<%= f["url"] %>" onclick="do_spin('<%= f["id"] %>');"> <%= File.basename(f["name"]) %> </a>
									<% else %>
									<%= f["name"] %>
									<% end %>
								</div>
								<div id="<%= f["id"] %>" class="span1">
								</div>
							</td>
						</tr>
						<% } %>
					</table>
				</div>
			</div>
		</div>
	</body>
</html>
